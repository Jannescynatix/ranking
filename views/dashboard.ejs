<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">

</head>
<body>
<div class="container">
    <header class="header-main">
        <h1>Willkommen, <%= user.username %>!</h1>
        <div class="nav-links">
            <form action="#" method="GET" class="search-form">
                <input type="text" id="searchInput" placeholder="Suche nach Bewertung..." autocomplete="off">
            </form>
            <a href="/reviews/new" class="btn-primary">Neue Bewertung</a>
            <% if (user.isAdmin) { %>
                <a href="/admin/dashboard" class="btn-primary">Admin-Dashboard</a>
            <% } %>
            <a href="/logout" class="btn-danger">Abmelden</a>
        </div>
    </header>

    <div class="product-grid">
        <% products.forEach(product => { %>
            <div class="product-card" data-product-name="<%= product.name.toLowerCase() %>">
                <h2><%= product.name %></h2>
                <p class="text-muted">Anzahl Bewertungen: <%= product.reviewCount %></p>
                <p>Durchschnittliche Bewertungen:</p>
                <ul>
                    <li>Qualität: <%= (product.ratings.quality).toFixed(1) %></li>
                    <li>Service: <%= (product.ratings.service).toFixed(1) %></li>
                    <li>Atmosphäre: <%= (product.ratings.atmosphere).toFixed(1) %></li>
                </ul>

                <h3>Kommentare:</h3>
                <% if (product.comments.length > 0) { %>
                    <% product.comments.forEach(comment => { %>
                        <div class="comment-card">
                            <p><%= comment.comment %></p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-muted">Noch keine Kommentare.</p>
                <% } %>
            </div>
        <% }) %>
    </div>

    <script>
        const searchInput = document.getElementById('searchInput');
        const productCards = document.querySelectorAll('.product-card');

        searchInput.addEventListener('keyup', (e) => {
            const searchValue = e.target.value.toLowerCase();

            productCards.forEach(card => {
                const productName = card.getAttribute('data-product-name');
                if (productName.includes(searchValue)) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });
    </script>
</div>
</body>
</html>